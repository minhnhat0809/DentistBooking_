@page "/staff/medicine"
@model DentistBooking.Pages.Staff.MedicineManagement.IndexModel

@{
    ViewData["Title"] = "Medicine Management";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DentistBooking</title>
    <link rel="stylesheet" href="~/css/Staff.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <h1>Medicine Management</h1>

    <div class="table-container">
        <div class="create-link">
            <a class="btn btn-primary" asp-page="Create">Create New</a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Medicine Name</th>
                    <th>Type</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Medicine)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.MedicineName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Type)</td>
                        <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                        <td>@Html.DisplayFor(modelItem => item.Price)</td>
                        <td>@(item.Status.HasValue && item.Status.Value ? "Available" : "Not Available")</td>
                        <td class="action-links">
                            <a class="btn btn-info" asp-page="./Edit" asp-route-id="@item.MedicineId">Edit</a>
                            <a class="btn btn-secondary" asp-page="./Details" asp-route-id="@item.MedicineId">Details</a>
                            <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.MedicineId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
