@page
@model DentistBooking.Pages.DentistPage.Appointments.EditModel

@{
    ViewData["Title"] = "Edit Appointment";
    Layout = "~/Pages/Shared/_DentistLayout.cshtml";
}

<h1>Edit Appointment</h1>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Appointment.AppointmentId" />

            <!-- Read-Only Fields -->
            <div class="form-group">
                <label asp-for="Appointment.TimeStart" class="control-label">Time Start</label>
                <input asp-for="Appointment.TimeStart" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Appointment.TimeEnd" class="control-label">Time End</label>
                <input asp-for="Appointment.TimeEnd" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Appointment.Status" class="control-label">Status</label>
                <select asp-for="Appointment.Status" class="form-control" asp-items="Model.StatusOptions">
                    <option value="">Select Status</option>
                </select>
                <span asp-validation-for="Appointment.Status" class="text-danger"></span>
            </div>

            <!-- Editable Fields -->
            <div class="form-group">
                <label asp-for="Appointment.Diagnosis" class="control-label"></label>
                <input asp-for="Appointment.Diagnosis" class="form-control" />
                <span asp-validation-for="Appointment.Diagnosis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.Note" class="control-label"></label>
                <input asp-for="Appointment.Note" class="form-control" />
                <span asp-validation-for="Appointment.Note" class="text-danger"></span>
            </div>

            <!-- Read-Only Fields -->
            <div class="form-group">
                <label asp-for="Appointment.CustomerId" class="control-label">Customer</label>
                <input asp-for="Appointment.CustomerId" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Appointment.DentistSlotId" class="control-label">Dentist</label>
                <input asp-for="Appointment.DentistSlotId" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Appointment.MedicalRecordId" class="control-label">Medical Record</label>
                <input asp-for="Appointment.MedicalRecordId" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Appointment.CreateBy" class="control-label">Created By</label>
                <input asp-for="Appointment.CreateBy" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Appointment.ModifiedBy" class="control-label">Modified By</label>
                <input asp-for="Appointment.ModifiedBy" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Appointment.ServiceId" class="control-label"></label>
                <input asp-for="Appointment.ServiceId" class="form-control" readonly />
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
