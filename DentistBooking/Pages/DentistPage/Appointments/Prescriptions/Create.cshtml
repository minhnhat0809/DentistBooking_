@page "{appointmentId?}"
@model DentistBooking.Pages.DentistPage.Appointments.Prescriptions.CreateModel

@{
    ViewData["Title"] = "Create Prescription";
    Layout = "~/Pages/Shared/_DentistLayout.cshtml";
}

<h1>Create Prescription</h1>

<h4>Prescription</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Prescription.Diagnosis" class="control-label"></label>
                <input asp-for="Prescription.Diagnosis" class="form-control" />
                <span asp-validation-for="Prescription.Diagnosis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prescription.AppointmentId" class="control-label"></label>
                <select asp-for="Prescription.AppointmentId" class="form-control" asp-items="ViewBag.AppointmentId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/DentistPage/Appointments/Edit" asp-route-id="@Model.Prescription.AppointmentId">Back to Appointment</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
