@page
@model DentistBooking.Pages.DentistPage.Prescriptions.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Prescription[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prescription[0].Diagnosis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prescription[0].Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prescription[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prescription[0].Appointment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Prescription) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diagnosis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Appointment.AppointmentId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PrescriptionId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.PrescriptionId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.PrescriptionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    @if (Model.Prescription.HasPreviousPage)
    {
        <a asp-page="./Index" asp-route-pageNumber="@(Model.Prescription.PageNumber - 1)" asp-route-pageSize="@Model.PageSize">Previous</a>
    }
    else
    {
        <span>Previous</span>
    }

    @if (Model.Prescription.HasNextPage)
    {
        <a asp-page="./Index" asp-route-pageNumber="@(Model.Prescription.PageNumber + 1)" asp-route-pageSize="@Model.PageSize">Next</a>
    }
    else
    {
        <span>Next</span>
    }
</div>


<script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>

<script src="~/js/site.js"></script>
