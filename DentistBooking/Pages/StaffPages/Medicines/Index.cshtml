@page
@model DentistBooking.Pages.StaffPages.Medicines.IndexModel

@{
ViewData["Title"] = "Index";
Layout = "~/Pages/Shared/_StaffLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* General page styling */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        h1 {
            color: #343a40;
            margin-top: 20px;
            text-align: center;
            font-size: 2rem;
        }

        /* Table styling */
        .table {
            margin-top: 20px;
            border-collapse: collapse;
            width: 100%;
            background-color: #ffffff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .table th, .table td {
            border: 1px solid #dee2e6;
            padding: 12px 15px;
            text-align: left;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .table thead th {
            background-color: #343a40;
            color: #ffffff;
            font-size: 0.875rem;
            text-transform: uppercase;
        }

        .table tbody tr {
            transition: background-color 0.3s ease-in-out;
        }

        .table tbody tr:hover {
            background-color: #f1f1f1;
        }

        .table a {
            color: #007bff;
            text-decoration: none;
            padding: 5px;
            font-size: 0.875rem;
        }

        .table a:hover {
            text-decoration: underline;
        }

        /* Badge styling */
        .badge {
            padding: 8px 12px;
            font-size: 0.875rem;
            font-weight: bold;
            border-radius: 4px;
            text-transform: uppercase;
        }

        .badge-active {
            background-color: #28a745;
            color: #ffffff;
        }

        .badge-inactive {
            background-color: #dc3545;
            color: #ffffff;
        }

        /* Button styling */
        .btn {
            display: inline-block;
            padding: 10px 20px;
            font-size: 0.875rem;
            border-radius: 4px;
            text-decoration: none;
            text-align: center;
            color: #ffffff;
            border: 1px solid transparent;
        }

        .btn-primary {
            background-color: #007bff;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .btn-details {
            background-color: #ffc107; /* Yellow background */
        }

        .btn-details:hover {
            background-color: #e0a800; /* Darker yellow */
        }

        .btn-danger {
            background-color: #dc3545;
        }

        .btn-danger:hover {
            background-color: #c82333;
        }

        /* Pagination styling */
        .pagination {
            margin-top: 20px;
            text-align: center;
        }

        .pagination a, .pagination span {
            padding: 10px 15px;
            margin: 0 5px;
            font-size: 0.875rem;
            border-radius: 4px;
            color: #007bff;
            text-decoration: none;
            border: 1px solid #dee2e6;
        }

        .pagination span {
            color: #6c757d;
        }

        .pagination a:hover {
            background-color: #e9ecef;
        }
    </style>
</head>
<body>
<div class="container">
    <h1>Medicines</h1>

    <p>
        <a asp-page="Create" class="btn btn-primary">Create New</a>
    </p>
    <table class="table">
        <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Medicine[0].MedicineName)</th>
            <th>@Html.DisplayNameFor(model => model.Medicine[0].Type)</th>
            <th>@Html.DisplayNameFor(model => model.Medicine[0].Quantity)</th>
            <th>@Html.DisplayNameFor(model => model.Medicine[0].Price)</th>
            <th>@Html.DisplayNameFor(model => model.Medicine[0].Status)</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Medicine) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.MedicineName)</td>
            <td>@Html.DisplayFor(modelItem => item.Type)</td>
            <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
            <td>@Html.DisplayFor(modelItem => item.Price)</td>
            <td>
                @if (item.Status.Value)
                {
                <span class="badge badge-active">Active</span>
                }
                else
                {
                <span class="badge badge-inactive">Inactive</span>
                }
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.MedicineId" class="btn btn-primary">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.MedicineId" class="btn btn-details">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.MedicineId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
        }
        </tbody>
    </table>

    <div class="pagination">
        @if (Model.Medicine.HasPreviousPage)
        {
        <a asp-page="./Index" asp-route-pageNumber="@(Model.Medicine.PageNumber - 1)" asp-route-pageSize="@Model.PageSize">Previous</a>
        }
        else
        {
        <span>Previous</span>
        }

        @if (Model.Medicine.HasNextPage)
        {
        <a asp-page="./Index" asp-route-pageNumber="@(Model.Medicine.PageNumber + 1)" asp-route-pageSize="@Model.PageSize">Next</a>
        }
        else
        {
        <span>Next</span>
        }
    </div>
</div>

<script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
<script src="~/js/site.js"></script>
</body>
</html>
