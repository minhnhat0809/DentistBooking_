@page
@model DentistBooking.Pages.StaffPages.Check_upSchedules.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_StaffLayout.cshtml";
}

<h1>Edit</h1>

<h4>CheckupSchedule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="CheckupSchedule.ScheduleId" />
            <div class="form-group">
                <label asp-for="CheckupSchedule.TimeStart" class="control-label"></label>
                <input asp-for="CheckupSchedule.TimeStart" class="form-control" />
                <span asp-validation-for="CheckupSchedule.TimeStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckupSchedule.TimeEnd" class="control-label"></label>
                <input asp-for="CheckupSchedule.TimeEnd" class="form-control" />
                <span asp-validation-for="CheckupSchedule.TimeEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckupSchedule.Notes" class="control-label"></label>
                <input asp-for="CheckupSchedule.Notes" class="form-control" />
                <span asp-validation-for="CheckupSchedule.Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckupSchedule.Status" class="control-label"></label>
                <select asp-for="CheckupSchedule.Status" class="form-control">
                    <option value="true">Active</option>
                    <option value="false">Inactive</option>
                </select>
                <span asp-validation-for="CheckupSchedule.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckupSchedule.CustomerId" class="control-label"></label>
                <select asp-for="CheckupSchedule.CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                <span asp-validation-for="CheckupSchedule.CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckupSchedule.DentistId" class="control-label"></label>
                <select asp-for="CheckupSchedule.DentistId" class="form-control" asp-items="ViewBag.DentistId"></select>
                <span asp-validation-for="CheckupSchedule.DentistId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
