@page
@model DentistBooking.Pages.StaffPages.Appointments.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_StaffLayout.cshtml";
}

<h1>Create</h1>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Appointment.TimeStart" class="control-label"></label>
                <input asp-for="Appointment.TimeStart" class="form-control" />
                <span asp-validation-for="Appointment.TimeStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.TimeEnd" class="control-label"></label>
                <input asp-for="Appointment.TimeEnd" class="form-control" />
                <span asp-validation-for="Appointment.TimeEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.Diagnosis" class="control-label"></label>
                <input asp-for="Appointment.Diagnosis" class="form-control" />
                <span asp-validation-for="Appointment.Diagnosis" class="text-danger"></span>
            </div>
            <div class="form-group">
                            <label asp-for="Appointment.Status" class="control-label"></label>
                            <select name="Appointment.Status" class="form-control">
                                @if (Model.Status != null)
                                {
                                     @foreach (var s in Model.Status)
                                        { <option value="@s">@s</option> }
                                }
                            </select>
                            <span asp-validation-for="Appointment.Status" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Appointment.DentistSlotId" class="control-label">Dentist</label>
                            <select asp-for="Appointment.DentistSlotId" class="form-control" asp-items="ViewBag.DentistSlotId" id="DentistSlotId"></select>
                            <span asp-validation-for="Appointment.DentistSlotId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                                        <label asp-for="Appointment.CustomerId" class="control-label"></label>
                                        <select asp-for="Appointment.CustomerId" class="form-control" asp-items="ViewBag.CustomerId" id="CustomerId"></select>
                                        <span asp-validation-for="Appointment.CustomerId" class="text-danger"></span>
                                    </div>
                        <div class="form-group">
                            <label asp-for="Appointment.ServiceId" class="control-label">Service</label>
                            <select name="Appointment.ServiceId" id="ServiceId" class="form-control">
                                @if (Model.Services != null)
                                                {
                                                     @foreach (var s in Model.Services)
                                                        { <option value="@s.ServiceId">@s.ServiceName</option> }
                                                }
                            </select>
                            <span asp-validation-for="Appointment.ServiceId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Appointment.MedicalRecordId" class="control-label">Medical Record</label>
                            <select name="Appointment.MedicalRecordId" id="MedicalRecordId" class="form-control">
                                                @if (Model.MedicalRecords != null)
                                                                {
                                                                     @foreach (var s in Model.MedicalRecords)
                                                                        { <option value="@s.MediaRecordId"> @s.Customer.Name - @s.Diagnosis</option> }
                                                                }
                                            </select>
                                            <span asp-validation-for="Appointment.ServiceId" class="text-danger"></span>
                            <span asp-validation-for="Appointment.MedicalRecordId" class="text-danger"></span>
                        </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script type="text/javascript">
        $(document).ready(function () {
            $('#DentistSlotId').change(function () {
                var dentistSlotId = $(this).val();
                $.getJSON('@Url.Page("/StaffPages/Appointments/Create", "ServicesByDentistSlot")', { dentistSlotId: dentistSlotId }, function (data) {
                    var serviceSelect = $('#ServiceId');
                    serviceSelect.empty();
                    $.each(data, function (index, item) {
                        serviceSelect.append($('<option>', {
                            value: item.value,
                            text: item.text
                        }));
                    });
                });
            });

            $('#CustomerId').change(function () {
                var customerId = $(this).val();
                $.getJSON('@Url.Page("/StaffPages/Appointments/Create", "MedicalRecordByCustomerId")', { customerId: customerId }, function (data) {
                    var medicalRecordSelect = $('#MedicalRecordId');
                    medicalRecordSelect.empty();
                    $.each(data, function (index, item) {
                        medicalRecordSelect.append($('<option>', {
                            value: item.value,
                            text: item.text
                        }));
                    });
                });
            });
        });
    </script>
}
