@page
@model DentistBooking.Pages.AdminPage.Clinics.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Clinic</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Clinic.ClinicId" />
            <div class="form-group">
                <label asp-for="Clinic.ClinicName" class="control-label"></label>
                <input asp-for="Clinic.ClinicName" class="form-control" />
                <span asp-validation-for="Clinic.ClinicName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clinic.Address" class="control-label"></label>
                <input asp-for="Clinic.Address" class="form-control" />
                <span asp-validation-for="Clinic.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clinic.Phone" class="control-label"></label>
                <input asp-for="Clinic.Phone" class="form-control" />
                <span asp-validation-for="Clinic.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clinic.Email" class="control-label"></label>
                <input asp-for="Clinic.Email" class="form-control" />
                <span asp-validation-for="Clinic.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clinic.Status" class="control-label"></label>
                <select asp-for="Clinic.Status" class="form-control">
                    <option value="true">Active</option>
                    <option value="false">Inactive</option>
                </select>
                <span asp-validation-for="Clinic.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
