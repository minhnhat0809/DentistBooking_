@page
@model DentistBooking.Pages.AdminPage.Medicines.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Medicines</h1>


<table class="table table-striped table-bordered  bg-light">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Medicine[0].MedicineName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medicine[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medicine[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medicine[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medicine[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Medicine) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MedicineName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
                @if (item.Status == true)
                {
                    <td>Active</td>
                }else {<td>Inactive</td>}
                @* <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td> *@
            <td>
                <a asp-page="./Details" asp-route-id="@item.MedicineId">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    @if (Model.Medicine.HasPreviousPage)
    {
        <a asp-page="./Index" asp-route-pageNumber="@(Model.Medicine.PageNumber - 1)" asp-route-pageSize="@Model.PageSize">Previous</a>
    }
    else
    {
        <span>Previous</span>
    }

    @if (Model.Medicine.HasNextPage)
    {
        <a asp-page="./Index" asp-route-pageNumber="@(Model.Medicine.PageNumber + 1)" asp-route-pageSize="@Model.PageSize">Next</a>
    }
    else
    {
        <span>Next</span>
    }
</div>
<script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>

<script src="~/js/site.js"></script>